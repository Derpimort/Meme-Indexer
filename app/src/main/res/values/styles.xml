<resources>


    <style name="BaseAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="BaseAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppFontStyle">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textColor">@color/colorTitleText</item>
    </style>

    <style name="AppTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/noto_sans_light</item>
    </style>

    <style name="AppButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/noto_sans_light</item>
    </style>

    <style name="ToolbarTitleText"  parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/raleway_thin</item>
        <item name="android:textSize">24sp</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>
    
    <style name="AlertDialogBase" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:windowBackground">@color/colorBackgroundLight</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <string name="search_hint">Text to search</string>
</resources>