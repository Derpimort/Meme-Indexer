<resources>


    <style name="BaseAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="BaseAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppFontStyle">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textColor">?attr/titleNameTextColor</item>
    </style>

    <style name="AppTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/noto_sans_light</item>
    </style>

    <style name="AppButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/noto_sans_light</item>
    </style>

    <style name="ToolbarTitleText"  parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/raleway_thin</item>
        <item name="android:textSize">24sp</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>
    
    <style name="AlertDialogBase" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColorPrimary">?attr/primaryTextColor</item>
        <item name="android:windowBackground">?attr/colorBackgroundLight</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- TODO: Find elegant way to properly use our color theme attributes in cardviews instead of  hardcoding legacy theme
    <style name="SearchCardStyle" parent="CardView">
        <item name="cardBackgroundColor">?attr/colorBackgroundLight</item>
    </style>

    <style name="MemefileCardStyle" parent="CardView">
        <item name="cardBackgroundColor">#00FDF2F2</item>
    </style>
    -->

</resources>